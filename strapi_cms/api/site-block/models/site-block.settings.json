{
  "kind": "collectionType",
  "collectionName": "site_blocks",
  "info": {
    "name": "Site Block"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "header",
        "footer",
        "content"
      ],
      "required": true,
      "unique": true
    },
    "component": {
      "type": "string",
      "required": true
    },
    "site": {
      "model": "site",
      "via": "site_blocks"
    },
    "unpublished": {
      "type": "boolean",
      "default": false
    },
    "is_live": {
      "type": "boolean",
      "default": false
    },
    "live": {
      "type": "component",
      "repeatable": false,
      "component": "data-sets.data-set"
    },
    "draft": {
      "type": "component",
      "repeatable": false,
      "component": "data-sets.data-set"
    }
  }
}
